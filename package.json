{
  "scripts": {
    "build": "run-s build:*",
    "build:mkdir": "mkdir -p distribution",
    "build:clean": "rm -rf distribution/*",
    "build:manifest": "node scripts/generate-manifest",
    "build:locales": "node scripts/generate-locales",
    "build:icon": "cp source/icon.png distribution/icon.png",
    "build:poly": "cp node_modules/webextension-polyfill/dist/browser-polyfill.min.js distribution/browser-polyfill.min.js",
    "build:sass": "node-sass source/content.scss distribution/content.css",
    "build:wp": "webpack --mode production",
    "watch": "run-p watch:*",
    "watch:sass": "node-sass source/content.scss distribution/content.css -w",
    "watch:wp": "webpack --mode development -w",
    "release": "run-s release:*",
    "release:chrome": "cd distribution && webstore upload --auto-publish",
    "lint": "run-s lint:*",
    "lint:sass": "sass-lint -v --max-warnings 0",
    "lint:ts": "tslint --project .",
    "zip": "cd distribution && zip -r ../extension.zip *",
    "dev": "run-s build watch"
  },
  "devDependencies": {
    "@types/element-ready": "^2.1.0",
    "awesome-typescript-loader": "^5.2.0",
    "chrome-webstore-upload-cli": "^1.2.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "sass-lint": "^1.12.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "utc-version": "^1.1.0",
    "web-ext-types": "^2.1.0",
    "webext-i18n": "^1.1.0",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1"
  },
  "dependencies": {
    "dom-chef": "^3.2.0",
    "element-ready": "^3.0.0",
    "webextension-polyfill": "^0.3.0"
  },
  "private": true
}
