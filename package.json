{
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "rm -rf extensions",
    "build:mkdir": "mkdir -p extensions/chrome extensions/firefox",
    "build:icon": "cp source/icon.png extensions/chrome/icon.png",
    "build:locales": "node scripts/generate-locales",
    "build:sass": "node-sass source/content.scss extensions/chrome/content.css",
    "build:tailwind": "tailwind build source/popup/popup.css -o extensions/chrome/popup.css",
    "build:wp": "webpack --mode production",
    "build:html-chrome": "cp source/popup/popup.chrome.html extensions/chrome/popup.html",
    "build:cp": "cp -r extensions/chrome/* extensions/firefox",
    "build:html-firefox": "cp source/popup/popup.firefox.html extensions/firefox/popup.html",
    "build:poly": "cp node_modules/webextension-polyfill/dist/browser-polyfill.min.js extensions/chrome/browser-polyfill.min.js",
    "build:manifest": "node scripts/generate-manifest",
    "watch": "run-p watch:*",
    "watch:sass": "node-sass source/content.scss extensions/chrome/content.css -w",
    "watch:wp": "webpack --mode development -w",
    "release": ". ./.env && run-s release:*",
    "release:chrome": "shipit chrome extensions/chrome",
    "release:firefox": "shipit firefox extensions/firefox",
    "lint": "run-s lint:*",
    "lint:sass": "sass-lint -v --max-warnings 0",
    "lint:ts": "tslint --project .",
    "lint:vue": "eslint --ext .vue source",
    "dev": "run-s build watch"
  },
  "devDependencies": {
    "@wext/shipit": "^0.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.2",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "sass-lint": "^1.12.1",
    "tailwindcss": "^1.0.2",
    "terser-webpack-plugin": "^1.3.0",
    "ts-loader": "^6.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.5.1",
    "utc-version": "^1.1.0",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.6.10",
    "web-ext-types": "^3.1.0",
    "webext-i18n": "^1.1.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "element-ready": "^4.1.0",
    "vue": "^2.6.10",
    "vue-feather-icons": "^4.21.0",
    "webextension-polyfill": "^0.4.0"
  },
  "private": true
}
